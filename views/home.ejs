<%- include('partials/header'); -%>

<h1>Home</h1>

<p> <%= startingContent %> </p>


<!-- for loop of posted articles. Using forEach function for simplicity-->

<% posts.forEach(function(post){%>

<h1><%=post.title  %></h1>
<!-- .substring(0,100)+"..." will cut the post content to max 100 words with appending ... -->
<p><%=  post.content.substring(0,100)+"..."%>
  <!-- href="posts/(ejstag)post.ttle" is to route the user to the page based on the post.title pair-->

  <a href="/posts/<%=post.title%>">Read More</a>
</p>
<%});%>
<!-- for loop ends here -->


<%- include('partials/footer'); -%>